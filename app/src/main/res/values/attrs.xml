<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AbsSwipeLayout">
        <attr name="restartOnFinish" format="boolean" />
        <attr name="swipeType" format="enum" >
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="both" value="3"/>
            <enum name="none" value="4"/>
        </attr>
        <attr name="swipeLeftMargin" format="dimension"/>
        <attr name="swipeRightMargin" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="SwipeListView">
        <attr name="SwipeListViewItemRestartOnFinish" format="boolean" />
        <attr name="SwipeListViewItemSwipeType" format="enum" >
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="both" value="3"/>
            <enum name="none" value="4"/>
        </attr>
        <attr name="SwipeListViewItemLeftMargin" format="dimension"/>
        <attr name="SwipeListViewItemRightMargin" format="dimension"/>
        <attr name="SwipeListViewMinVelocityToSwipe" format="float" />
        <attr name="SwipeListViewAnimationDuration" format="integer" />
    </declare-styleable>
</resources>
